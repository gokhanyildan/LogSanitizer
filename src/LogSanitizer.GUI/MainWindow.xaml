<Window x:Class="LogSanitizer.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogSanitizer.GUI"
        xmlns:converters="clr-namespace:LogSanitizer.GUI"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="Transparent"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="LogSanitizer v2.1 - Batch Processor" Height="650" Width="900"
        Icon="{DynamicResource WindowIcon}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Geometry x:Key="WindowIconGeometry">F1 M 12,2C 15.86,2 19,5.13 19,9C 19,14.25 12,22 12,22C 12,22 5,14.25 5,9C 5,5.13 8.13,2 12,2 M 12,4C 9.24,4 7,6.24 7,9C 7,10.1 7.31,11.13 7.86,12C 9.81,10.92 12,10.21 12,10.21C 12,10.21 14.19,10.92 16.14,12C 16.69,11.13 17,10.1 17,9C 17,6.24 14.76,4 12,4 M 12,11.25C 10.58,11.69 9.36,12.47 8.38,13.5C 9.34,14.83 10.6,16 12,16.93C 13.4,16 14.66,14.83 15.62,13.5C 14.64,12.47 13.42,11.69 12,11.25Z</Geometry>
        <DrawingImage x:Key="WindowIcon">
            <DrawingImage.Drawing>
                <GeometryDrawing Brush="{DynamicResource MaterialDesignBody}">
                    <GeometryDrawing.Geometry>
                        <StaticResource ResourceKey="WindowIconGeometry"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingImage.Drawing>
        </DrawingImage>
        <converters:InverseBooleanConverter x:Key="InverseBoolConverter"/>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"
                      ResizeBorderThickness="5"
                      CornerRadius="0"
                      GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>

    <Border Background="{DynamicResource MaterialDesignPaper}" CornerRadius="8" ClipToBounds="True" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title Bar -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Height="40" Background="{DynamicResource MaterialDesignPaper}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Icon and Title -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                    <Image Source="{DynamicResource WindowIcon}" Width="20" Height="20" Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" 
                               VerticalAlignment="Center" 
                               Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                               Opacity="0.8"/>
                </StackPanel>

                <!-- Window Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                    <!-- About Button (Moved to Header) -->
                    <Button Click="AboutButton_Click" 
                            Style="{StaticResource MaterialDesignIconForegroundButton}"
                            ToolTip="About LogSanitizer"
                            Width="40" Height="40" Margin="0,0,8,0">
                        <materialDesign:PackIcon Kind="Information" Width="20" Height="20"/>
                    </Button>

                    <Button Click="Minimize_Click" Style="{StaticResource MaterialDesignIconForegroundButton}" Width="40" Height="40" ToolTip="Minimize">
                        <materialDesign:PackIcon Kind="Minus"/>
                    </Button>
                    <Button Click="Maximize_Click" Style="{StaticResource MaterialDesignIconForegroundButton}" Width="40" Height="40" ToolTip="Maximize">
                        <materialDesign:PackIcon Kind="CropSquare"/>
                    </Button>
                    <Button Click="Close_Click" Style="{StaticResource MaterialDesignIconForegroundButton}" Width="40" Height="40" ToolTip="Close">
                        <materialDesign:PackIcon Kind="Close"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Row="1" Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column: Source Files -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,8,16" Padding="8" VerticalAlignment="Stretch">
                    <Grid AllowDrop="True" Drop="Files_Drop" DragOver="Files_DragOver">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Source Files" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="8"/>

                        <ListBox Grid.Row="1" ItemsSource="{Binding SourceFiles}" Margin="0,8">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileDocument" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                            <Button Command="{Binding BrowseInputCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FilePlus" Margin="0,0,8,0"/>
                                    <TextBlock Text="Add Files"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding BrowseInputFolderCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FolderPlus" Margin="0,0,8,0"/>
                                    <TextBlock Text="Add Folder"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding ClearListCommand}" Style="{StaticResource MaterialDesignFlatButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="DeleteSweep" Margin="0,0,8,0"/>
                                    <TextBlock Text="Clear List"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <!-- Right Column: Output & Rules -->
                <Grid Grid.Column="1" Margin="8,0,0,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <materialDesign:Card Grid.Row="0" Padding="16" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Output Destination" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="0,0,0,8"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding OutputDirectory}" materialDesign:HintAssist.Hint="Default: Same as source" IsReadOnly="True" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" Command="{Binding BrowseOutputCommand}" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Select Output Folder">
                                    <materialDesign:PackIcon Kind="FolderOpen"/>
                                </Button>
                            </Grid>
                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <RadioButton Content="Create New File" 
                                             IsChecked="{Binding OverwriteOutput, Converter={StaticResource InverseBoolConverter}}" 
                                             GroupName="OutputMode" Margin="0,0,16,0"
                                             ToolTip="Creates a new file with '_sanitized' suffix"/>
                                <RadioButton Content="Overwrite Original" 
                                             IsChecked="{Binding OverwriteOutput}" 
                                             GroupName="OutputMode"
                                             ToolTip="Overwrites the source file directly"/>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Row="1" Padding="16" VerticalAlignment="Stretch">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Sanitization Rules" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="0,0,0,8"/>
                            
                            <CheckBox Grid.Row="1" Content="Select All" 
                                      IsChecked="{Binding IsAllRulesSelected}" 
                                      Margin="0,0,0,8" FontWeight="SemiBold"/>

                            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding PiiOptions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Name}" 
                                                      IsChecked="{Binding IsSelected}" 
                                                      Margin="0,4"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </Grid>

            <!-- Footer: Status & Start Button -->
            <materialDesign:Card Grid.Row="2" Margin="16,0,16,16" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel VerticalAlignment="Center" Margin="0,0,16,0">
                        <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,0,0,4"/>
                        <ProgressBar Value="{Binding ProgressValue}" Height="10" Minimum="0" Maximum="100"/>
                    </StackPanel>

                    <!-- Start Button (About Button Removed) -->
                    <Button Grid.Column="1" Command="{Binding SanitizeCommand}" 
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Height="50" Width="200" FontSize="16">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="SecurityNetwork" Width="24" Height="24" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Start Batch" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Border>
</Window>